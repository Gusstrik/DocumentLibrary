<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="FILE_LOG_PATTERN" value="%d{dd.MM.yyyy HH:mm:ss.SSS} [%thread] %-5level %c - %msg%n"/>

    <appender name="postgresdatabase-log" class="ch.qos.logback.core.FileAppender">
        <file>logs/repository-model/postgres.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="postgresdatabase-test-log" class="ch.qos.logback.core.FileAppender">
        <file>logs/repository-model/postgres-test.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="PostgresTypeDaoTest" level="debug">
        <appender-ref ref="postgresdatabase-test-log"/>
    </logger>

    <logger name="com.strelnikov.doclib.postgresdatabase" level="debug">
        <appender-ref ref="postgresdatabase-log"/>
    </logger>
</configuration>