<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Archetype Created Web Application</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>catalog-servlet</servlet-name>
        <servlet-class>com.strelnikov.doclib.web.servlets.CatalogServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>type-servlet</servlet-name>
        <servlet-class>com.strelnikov.doclib.web.servlets.DocumentTypeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>document-servlet</servlet-name>
        <servlet-class>com.strelnikov.doclib.web.servlets.DocumentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>unit-servlet</servlet-name>
        <servlet-class>com.strelnikov.doclib.web.servlets.UnitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>unit-servlet</servlet-name>
        <url-pattern>/unit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>catalog-servlet</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>type-servlet</servlet-name>
        <url-pattern>/type</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>document-servlet</servlet-name>
        <url-pattern>/document</url-pattern>
    </servlet-mapping>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:application-context.xml
        </param-value>
    </context-param>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
</web-app>
